  }

  
  //If we have just exited calibration mode
  if (mag.isCalibrated() && !calibrationDone)
  {
    uView.clear(PAGE);
    uView.print("Ok");
    uView.display();
    Serial.println("Exiting calibration mode");

    delay(3000);
    calibrationDone = true;
  }
  
  if (mag.isCalibrated())
  {
    //This used to cycle through all the compass sprites
    //if (i >11)
    //i = 0;

    //Make sure the top edge of the microview is pointed the same way as the x-axis of the MAG3110 unit
    //As in this case, you may need to add an offset to get the proper angle
    //In my circuit, the x-axis of the MAG3110 was 90 CW of the front of my microview, so I add 90 degrees
    //The other code makes the heading pertain to 0 to 360 degrees instead of +- 180
    int heading = (int)mag.readHeading() + 90;

    if (heading < 0) //If the heading is negative (ranges from -1 to -180)
      heading *= -1; //Negate the heading
    else if (heading > 0)
      heading = 360 - heading;

    int spriteNum = 0;

    //These if statements select the proper compass needle sprite
    if (heading < 15 && heading  > 0 || heading > 345) //Between 0 and 15 or above 345 degrees
    {
      spriteNum = 0;
    }
    else if (heading >= 15 && heading < 45) //Between 15 and 45
    {
      spriteNum = 1;
    }
    else if (heading >= 45 && heading < 75)
    {
      spriteNum = 2;
    }
    else if (heading >= 75 && heading < 105)
    {
      spriteNum = 3;
    }
    else if (heading >= 105 && heading < 135)
    {
      spriteNum = 4;
    }
    else if (heading >= 135 && heading < 165)
    {
      spriteNum = 5;
    }
    else if (heading >= 165 && heading < 195)
    {
      spriteNum = 6;
    }
    else if (heading >= 195 && heading < 225)
    {
      spriteNum = 7;
    }
    else if (heading >= 225 && heading < 255)
    {
      spriteNum = 8;
    }
    else if (heading >= 255 && heading < 285)
    {
      spriteNum = 9;
    }
    else if (heading >= 285 && heading < 315)
    {
      spriteNum = 10;
    }
    else if (heading >= 315 && heading < 345)
    {
      spriteNum = 11;
    }

    //Load and display compass
    uView.clear(PAGE);
    loadSpriteFromPMem(&(compass[spriteNum]));
    uView.setCursor(0, 40);
    uView.print(heading);
    uView.display();
    delay(100);
  }
}

